{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "node: current service",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
            ],
            "console": "integratedTerminal",
            "runtimeExecutable": "yarn",
            "cwd": "${fileDirname}",
            "args": "start",
            "envFile": "${workspaceFolder}/.env",
            "preLaunchTask": {
                "type": "npm",
                "script": "watch"
            }
        },
        {
            "name": "node: current file",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "runtimeExecutable": "yarn",
            "args": [
                "node",
                "${fileDirname}/${fileBasenameNoExtension}.js"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
            ],
            "preLaunchTask": {
                "type": "npm",
                "script": "watch"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "mocha: all",
            "console": "integratedTerminal",
            "runtimeExecutable": "yarn",
            "args": [
                "test",
                "--no-timeouts",
                "--recursive"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
            ],
            "preLaunchTask": {
                "type": "npm",
                "script": "watch"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "mocha: current project",
            "console": "integratedTerminal",
            "runtimeExecutable": "yarn",
            "cwd": "${fileDirname}",
            "args": [
                "test",
                "--no-timeouts",
                "--recursive"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
            ],
            "preLaunchTask": {
                "type": "npm",
                "script": "watch"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "mocha: current file",
            "console": "integratedTerminal",
            "runtimeExecutable": "yarn",
            "cwd": "${fileDirname}",
            "args": [
                "test:base",
                "--no-timeouts",
                "${fileDirname}/${fileBasenameNoExtension}.js"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
            ],
            "env": {
                "TS_NODE_FILES": "true"
            },
            "preLaunchTask": {
                "type": "npm",
                "script": "watch"
            }
        }
    ]
}