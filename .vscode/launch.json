{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "node: master",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
            ],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/services/master/src/start.ts",
            "preLaunchTask": {
                "type": "npm",
                "script": "watch"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "node: cluster",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
            ],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/services/cluster/src/start.ts",
            "args": [
                "--max-old-space-size=4096"
            ],
            "env": {
                "CLUSTER_ID": "0",
                "SHARDS_MAX": "1",
                "SHARDS_FIRST": "0",
                "SHARDS_LAST": "0"
            },
            "preLaunchTask": {
                "type": "npm",
                "script": "watch"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "node: api",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
            ],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/services/api/src/start.ts",
            "preLaunchTask": {
                "type": "npm",
                "script": "watch"
            }
        },
        {
            "name": "node: current",
            "type": "node",
            "console": "integratedTerminal",
            "program": "${file}",
            "request": "launch",
            "skipFiles": [
                "!.yarn/**",
            ],
            "autoAttachChildProcesses": true,
            "preLaunchTask": {
                "type": "npm",
                "script": "watch"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "mocha: all",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/.yarn/unplugged/mocha-npm-10.1.0-206792a93c/node_modules/mocha/bin/_mocha",
            "args": [
                "--no-timeouts",
                "--config",
                "${workspaceFolder}/mocharc.json",
                "--recursive"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
            ],
            "autoAttachChildProcesses": true,
            "preLaunchTask": {
                "type": "npm",
                "script": "watch"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "mocha: current",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/.yarn/unplugged/mocha-npm-10.1.0-206792a93c/node_modules/mocha/bin/_mocha",
            "args": [
                "--no-timeouts",
                "--config",
                "${workspaceFolder}/mocharc.json",
                "${file}"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
            ],
            "env": {
                "TS_NODE_FILES": "true"
            },
            "autoAttachChildProcesses": true,
            "preLaunchTask": {
                "type": "npm",
                "script": "watch"
            }
        }
    ]
}